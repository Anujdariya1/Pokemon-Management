<!DOCTYPE html>
<html>
<head>
  <title>Trainers</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Trainers</h1>
  <a href="/">â¬… Back to Home</a>
  <a href="/trainers/add">Add Trainer</a>
  <table>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Action</th>
    </tr>
    <% trainers.forEach(trainer => { %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= trainer.region %></td>
        <td>
          <form action="/trainers/delete/<%= trainer.trainer_id %>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
